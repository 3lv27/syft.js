{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017"],
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "isolatedModules": false,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src/": ["src/"]
    },
    "rootDirs": [],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],

    "sourceMap": true,
    "declaration": true
  },
  "exclude": [
    "index.d.ts",
    "node_modules",
    "dist"
  ],
  "filesGlob": [
    "./src//.ts",
    "./test//.ts",
    "./typings/index.d.ts",
    "./custom_typings//.d.ts",
    "./node_modules/@types//.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
